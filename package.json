{
	"name": "imperial.js",
	"version": "3.0.0-9",
	"description": "Imperial API wrapper for Node.js",
	"main": "./lib/cjs/index.js",
	"types": "./lib/dts/index.d.ts",
	"scripts": {
		"ci": "rimraf node_modules && yarn install --frozen-lockfile",
		"clean": "rimraf lib",
		"build": "tsc -p tsconfig.json",
		"w": "nodemon --config nodemon.json",
		"lint": "eslint --ext .ts src/ --fix",
		"format": "prettier --write \"src/**/*.ts\"",
		"test": "jest",
		"postinstall": "husky install",
		"prepublishOnly": "pinst --disable",
		"postpublish": "pinst --enable"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/imperialbin/imperial.js.git"
	},
	"keywords": [
		"imperial",
		"imperialb.in"
	],
	"author": "pxseu <me+npm@pxseu.com>",
		"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/imperialbin/imperial.js/issues"
	},
	"homepage": "https://github.com/imperialbin/imperial.js#readme",
	"dependencies": {
		"abort-controller": "^3.0.0",
		"node-fetch": "2.6.7"
	},
	"engines": {
		"node": ">=8"
	},
	"devDependencies": {
		"@pxseu/eslint-config": "^1.0.1",
		"@pxseu/prettier-config": "^1.0.0",
		"@types/jest": "^26.0.20",
		"@types/node": "^16.9.1",
		"@types/node-fetch": "^2.5.12",
		"@typescript-eslint/eslint-plugin": "^5.12.0",
		"@typescript-eslint/parser": "^5.12.0",
		"eslint": "^7.17.0",
		"eslint-config-prettier": "^7.1.0",
		"fetch-mock-jest": "^1.5.1",
		"husky": "^6.0.0",
		"jest": "^26.6.3",
		"nodemon": "^2.0.15",
		"pinst": "^2.1.6",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.5.1",
		"typescript": "^4.1.5"
	},
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"testMatch": [
			"**/test/**/*.test.ts"
		],
		"transform": {
			"^.+\\.|ts$": "ts-jest"
		}
	}
}
